@*@model IEnumerable<PetShop.Model.Transaction>*@
@model TransactionIndexViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Transactions</h1>

<p>
    <a asp-action="Create">Sell a pet</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Date
            </th>
            <th>
                Pet Price
            </th>
            <th>
                Pet Food Qty
            </th>
            <th>
                Pet Food Price
            </th>
            <th>
                Total Price
            </th>
            <th>
                Customer
            </th>
            <th>
                Employee
            </th>
            <th>
                Pet
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Transactions) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PetPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PetFoodQty)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PetFoodPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Customer.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Employee.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pet.Breed)
            </td>
@*            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>*@
        </tr>
}
    </tbody>
</table>
