@model TransactionSellViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Sell">


            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PetFoodQty" class="control-label"></label>
                <input asp-for="PetFoodQty" class="form-control" />
                <span asp-validation-for="PetFoodQty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PetFoods" class="control-label"></label>
                <select asp-for="PetFoods"  class="form-control">
                </select>
                <span asp-validation-for="PetStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AnimalType" class="control-label"></label>
                <select asp-for="AnimalType" class="form-control">
                    <option value="">&lt;none&gt;</option>
                    <option value="0">Mammal</option>
                    <option value="1">Fish</option>
                    <option value="2">Reptile</option>
                    <option value="3">Bird</option>
                </select>
                <span asp-validation-for="AnimalType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Cost" class="control-label"></label>
                <input asp-for="Cost" class="form-control" />
                <span asp-validation-for="Cost" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
