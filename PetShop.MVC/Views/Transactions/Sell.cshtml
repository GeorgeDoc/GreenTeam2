@model TransactionSellViewModel

@{
    ViewData["Title"] = "Sell";
}

<h1>Sell</h1>
<h4>Transaction</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Sell">
            <div class="form-group">
                <label asp-for="PetFoodID" class="control-label"></label>
                <select asp-for="PetFoodID" class ="form-control" asp-items=Model.PetFoodList></select>
            </div>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PetFoodQty" class="control-label"></label>
                <input asp-for="PetFoodQty" class="form-control" />
                <span asp-validation-for="PetFoodQty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
